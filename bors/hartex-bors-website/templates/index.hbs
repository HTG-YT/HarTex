<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bors V2</title>
    <style>
        h1 {
            font-size: 26px;
        }

        h2 {
            font-size: 22px;
        }

        h3 {
            font-size: 20px;
        }

        h4 {
            font-size: 18px;
        }

        .wrapper {
            max-width: 60em;
            margin-left: auto;
            margin-right: auto;
        }

        .repositories {
            font-size: 20px;
            line-height: 180%;
        }
    </style>
</head>
<body>
<div class="wrapper">
    <h1>Bors V2</h1>

    <h2>Repositories</h2>

    <ul class="repositories">
        {{#each repositories}}
            <li>
                <a href="queue/{{this.label}}">{{this.label}}</a>
            </li>
        {{/each}}
    </ul>
</div>
</body>
</html>
